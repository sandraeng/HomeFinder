@model IEnumerable<HomeFinder.Models.LeaseType>

@{
    ViewData["Title"] = "Lease types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center pt-4 pb-4" style="background-color:#d7d9dbb3;">
    <h1>Lease types</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary m-3">Create New</a>
    </p>

    @foreach (var type in Model)
    {
        <div class="col-md-8 offset-md-2">

            <div class="card m-3">
                <div class="card-header">
                    Lease type id : @type.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title pt-2">@type.Name</h5>
                    <p class="card-text">@type.Description</p>
                </div>
                <div class="card-footer">
                    <form method="post" asp-action="Delete" asp-route-id="@type.Id">
                        <a asp-action="Edit" asp-route-id="@type.Id" class="btn btn-primary">Edit</a>

                        <span id="confirmDeleteSpan_@type.Id" style="display:none">
                            <span>Are you sure you want to delete this lease type?</span>
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <a class="btn btn-primary text-light" onclick="confirmDelete('@type.Id', false)">No</a>
                        </span>
                        <span id="deleteSpan_@type.Id">
                            <a class="btn btn-danger text-light" onclick="confirmDelete('@type.Id', true)">Delete</a>
                        </span>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{
    <script src="~/js/deleteconfirmation.js"></script>
}
