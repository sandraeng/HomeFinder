@model HomeFinder.Models.PropertyType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>PropertyType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IconUrl" class="control-label"></label>
                <input asp-for="IconUrl" class="form-control" />
                <span asp-validation-for="IconUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyTypeName" class="control-label"></label>
                @* The following creates a dropdown for enum values. Gets values from viewbag in controller. *@
                <select asp-for="@Model.PropertyTypeName" asp-items="ViewBag.PropertyTypeNames" class="form-control"></select>
                <span asp-validation-for="PropertyTypeName" class="text-danger"></span>
            </div>
@*
            <div class="form-group">
                <label asp-for="PropertyTypeName" class="control-label"></label>
                <select asp-for="PropertyTypeName" class="form-control"></select>
                <span asp-validation-for="PropertyTypeName" class="text-danger"></span>
            </div>
*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
