@model IEnumerable<HomeFinder.Models.PropertyType>

@{
    ViewData["Title"] = "Property types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center pt-4 pb-4" style="background-color:#d7d9dbb3;">
    <h1>Property types</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary m-3">Create New</a>
    </p>

    @foreach (var type in Model)
    {
        <div class="col-md-6 offset-md-3">

            <div class="card m-3">
                <div class="card-header">
                    Property type id : @type.Id
                </div>
                <div class="card-body">
                    <img src="@type.IconUrl" asp-append-version="true" style="width:50px;">
                    <h5 class="card-title pt-2">@type.PropertyTypeName</h5>
                </div>
                <div class="card-footer">
                    <form method="post" asp-action="Delete" asp-route-id="@type.Id">
                        <a asp-action="Edit" asp-route-id="@type.Id" class="btn btn-primary">Edit</a>

                        <span id="confirmDeleteSpan_@type.Id" style="display:none">
                            <span>Are you sure you want to delete this role?</span>
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <a class="btn btn-primary text-light" onclick="confirmDelete('@type.Id', false)">No</a>
                        </span>
                        <span id="deleteSpan_@type.Id">
                            <a class="btn btn-danger text-light" onclick="confirmDelete('@type.Id', true)">Delete</a>
                        </span>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function confirmDelete(uniqueId, isDeleteClicked){
        var deleteSpan = 'deleteSpan_' + uniqueId;
        var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;

        if (isDeleteClicked){
            $('#' + deleteSpan).hide();
            $('#' + confirmDeleteSpan).show();
        }
        else{
            $('#' + deleteSpan).show();
            $('#' + confirmDeleteSpan).hide();
        }
    }
</script>