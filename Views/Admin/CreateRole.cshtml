@model CreateRole

@{
        ViewData["Title"] = "Create role";

}


<div class="text-center">
        <form method="post" style="background-color:#d7d9dbb3;" class="mt-5 pt-3">
            <h4>Create a new role.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="RoleName" class="mt-3"></label>
                        <input asp-for="RoleName" class="form-control mt-3"/>
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>            
            </div>
            <button type="submit" class="btn btn-primary mt-4 mb-5">Create role</button>
            
            <a asp-action="ListRoles">Back to List</a>
        </form>
    </div>