@model HomeFinder.Models.PropertyObject

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12">
    <div class="card mb-2">
        <div class="card-header">
            <h5>
                Edit PropertyObject
            </h5>
        </div>
        <div class="row g-0">
            <div class="col-12">
                <div class="card-body">

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="PropertyTypeId" class="control-label"></label>
                            <select asp-for="PropertyTypeId" class="form-control" asp-items="ViewBag.PropertyTypeId"></select>
                            <span asp-validation-for="PropertyTypeId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RealtorId" class="control-label"></label>
                            <select asp-for="RealtorId" class="form-control" asp-items="ViewBag.RealtorId"></select>
                            <span asp-validation-for="RealtorId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-control"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ListPrice" class="control-label"></label>
                            <input asp-for="ListPrice" class="form-control" />
                            <span asp-validation-for="ListPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NumberOfRooms" class="control-label"></label>
                            <input asp-for="NumberOfRooms" class="form-control" />
                            <span asp-validation-for="NumberOfRooms" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Area" class="control-label"></label>
                            <input asp-for="Area" class="form-control" />
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NonLivingArea" class="control-label"></label>
                            <input asp-for="NonLivingArea" class="form-control" />
                            <span asp-validation-for="NonLivingArea" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LotArea" class="control-label"></label>
                            <input asp-for="LotArea" class="form-control" />
                            <span asp-validation-for="LotArea" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UploadedDate" class="control-label"></label>
                            <input asp-for="UploadedDate" class="form-control" />
                            <span asp-validation-for="UploadedDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NextShowingDateTime" class="control-label"></label>
                            <input asp-for="NextShowingDateTime" class="form-control" />
                            <span asp-validation-for="NextShowingDateTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AddressId" class="control-label"></label>
                            <select asp-for="AddressId" class="form-control" asp-items="ViewBag.AddressId"></select>
                            <span asp-validation-for="AddressId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LeaseTypeId" class="control-label"></label>
                            <select asp-for="LeaseTypeId" class="form-control" asp-items="ViewBag.LeaseTypeId"></select>
                            <span asp-validation-for="LeaseTypeId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="YearBuilt" class="control-label"></label>
                            <input asp-for="YearBuilt" class="form-control" />
                            <span asp-validation-for="YearBuilt" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <div class="m-2">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
