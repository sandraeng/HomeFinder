@model HomeFinder.Models.PropertyObject

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12">
    <div class="card mb-2">
        <div class="card-header">
            <h5>
                Create PropertyObject
            </h5>
        </div>
        <div class="row g-0">
            <div class="col-12">
                <div class="card-body">

                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="RealtorId" class="control-label"></label>
                            <select asp-for="RealtorId" class="form-control" asp-items="ViewBag.RealtorId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="PropertyType" class="control-label"></label>
                            <div>
                                @Html.DropDownListFor(x => Model.PropertyTypeId, new SelectList(ViewBag.PropertyTypes, "Id", "PropertyTypeName"), htmlAttributes: new { @class = "form-control", id = "PropertyType" })
                                @Html.ValidationMessageFor(x => x.PropertyType, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="LeaseType" class="control-label"></label>
                            <div>
                                @Html.DropDownListFor(x => Model.LeaseTypeId, new SelectList(ViewBag.LeaseTypes, "Id", "Name"), htmlAttributes: new { @class = "form-control", id = "LeaseType" })
                                @Html.ValidationMessageFor(x => x.LeaseType, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            @* The following creates a dropdown for enum values. Gets values from viewbag in controller. *@
                            <select asp-for="@Model.Status" asp-items="ViewBag.PropertyObjectStatuses" class="form-control"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ListPrice" class="control-label"></label>
                            <input asp-for="ListPrice" class="form-control" />
                            <span asp-validation-for="ListPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NumberOfRooms" class="control-label"></label>
                            <input asp-for="NumberOfRooms" class="form-control" />
                            <span asp-validation-for="NumberOfRooms" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Area" class="control-label"></label>
                            <input asp-for="Area" class="form-control" />
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NonLivingArea" class="control-label"></label>
                            <input asp-for="NonLivingArea" class="form-control" />
                            <span asp-validation-for="NonLivingArea" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LotArea" class="control-label"></label>
                            <input asp-for="LotArea" class="form-control" />
                            <span asp-validation-for="LotArea" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="YearBuilt" class="control-label"></label>
                            <input asp-for="YearBuilt" class="form-control" />
                            <span asp-validation-for="YearBuilt" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NextShowingDateTime" class="control-label"></label>
                            <input asp-for="NextShowingDateTime" class="form-control" />
                            <span asp-validation-for="NextShowingDateTime" class="text-danger"></span>
                        </div>
                        <div class="form-control">
                            <label asp-for="Images" class="control-label"></label>
                            <input type="file" name="files" class="form-control" multiple />
                            <span asp-validation-for="Images" class="text-danger"></span>
                        </div>
                        <br /><br />
                        @Html.EditorFor(x => x.Address)
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <div class="m-2">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
