@model HomeFinder.Models.PropertyObject

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>PropertyObject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RealtorId" class="control-label"></label>
                <select asp-for="RealtorId" class ="form-control" asp-items="ViewBag.RealtorId"></select>
            </div>

            <div class="form-group">
                <label asp-for="PropertyType" class="control-label"></label>
                <div>
                    @Html.DropDownListFor(x => Model.PropertyTypeId, new SelectList(ViewBag.PropertyTypes, "Id", "PropertyTypeName"), htmlAttributes: new { @class = "form-control", id = "PropertyType"})
                    @Html.ValidationMessageFor(x => x.PropertyType, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                @* The following creates a dropdown for enum values. Gets values from viewbag in controller. *@
                <select asp-for="@Model.Status" asp-items="ViewBag.PropertyObjectStatuses" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            @*
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            *@
            <div class="form-group">
                <label asp-for="ListPrice" class="control-label"></label>
                <input asp-for="ListPrice" class="form-control" />
                <span asp-validation-for="ListPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfRooms" class="control-label"></label>
                <input asp-for="NumberOfRooms" class="form-control" />
                <span asp-validation-for="NumberOfRooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadedDate" class="control-label"></label>
                <input asp-for="UploadedDate" class="form-control" />
                <span asp-validation-for="UploadedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NextShowingDateTime" class="control-label"></label>
                <input asp-for="NextShowingDateTime" class="form-control" />
                <span asp-validation-for="NextShowingDateTime" class="text-danger"></span>
            </div>
            @Html.EditorFor(x => x.Address)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
