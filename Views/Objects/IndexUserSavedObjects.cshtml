@model IEnumerable<PropertyObject>
@{
    ViewData["Title"] = "Saved objects";
}
<h1>Saved objects</h1>

@if (Model.Count() < 1)
{
    <h2>No objects saved</h2>
}
else
{
  <div class="row">
    @foreach (var propObject in Model)
   {
       <div class="card" style="width: 23rem; height: 18rem; flex-direction:row;">
         <img src="@propObject.Images[0].Url" class="card-img w-50 h-100" alt="...">
            <div class="card-body">
               <h6 class="card-title">@propObject.Address.StreetAddress</h6>
                  <p class="card-text">Ort: @propObject.Address.City</p>
                  <p class="card-text">Bostadstyp: @propObject.PropertyType</p>
                  <p class="card-text">Pris: @propObject.ListPrice.ToString("c")</p>
                     <a href="#" class="btn btn-danger float-right"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-suit-heart-fill" viewBox="0 0 16 16">
                        <path d="M4 1c2.21 0 4 1.755 4 3.92C8 2.755 9.79 1 12 1s4 1.755 4 3.92c0 3.263-3.234 4.414-7.608 9.608a.513.513 0 0 1-.784 0C3.234 9.334 0 8.183 0 4.92 0 2.755 1.79 1 4 1z"/>
                      </svg>
                    </a>
                  </div>    
                </div>
   }

</div>  
}
