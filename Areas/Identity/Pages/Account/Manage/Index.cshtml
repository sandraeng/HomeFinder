@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="card mt-2 mb-2">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-content">
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <div class="row">
            <div class="col-md-12">
                <form id="profile-form" method="post">
                    @* Roles, if any *@
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Input.Roles"></label>
                            <input asp-for="Input.Roles" class="form-control" disabled />
                            <span asp-validation-for="Input.Roles" class="text-danger"></span>
                        </div>
                    </div>
                    @* User *@
                    <div class="col-md-12">
                        <h4>User data</h4>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Input.User.Id" />
                        <div class="form-group">
                            <label asp-for="Input.User.FirstName"></label>
                            <input asp-for="Input.User.FirstName" class="form-control" />
                            <span asp-validation-for="Input.User.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.User.LastName"></label>
                            <input asp-for="Input.User.LastName" class="form-control" />
                            <span asp-validation-for="Input.User.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.User.PhoneNumber"></label>
                            <input asp-for="Input.User.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.User.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    @* Address object*@
                    <div class="col-md-12">
                        <h4>Address</h4>
                        <input type="hidden" asp-for="Input.Address.Id" />
                        <div class="form-group">
                            <label asp-for="Input.Address.StreetAddress"></label>
                            <input asp-for="Input.Address.StreetAddress" class="form-control" />
                            <span asp-validation-for="Input.Address.StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Address.PostalCode"></label>
                            <input asp-for="Input.Address.PostalCode" class="form-control" />
                            <span asp-validation-for="Input.Address.PostalCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Address.City"></label>
                            <input asp-for="Input.Address.City" class="form-control" />
                            <span asp-validation-for="Input.Address.City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Address.Country"></label>
                            <input asp-for="Input.Address.Country" class="form-control" />
                            <span asp-validation-for="Input.Address.Country" class="text-danger"></span>
                        </div>
                    </div>
                    @* Company object *@
    @if (Model.Input.User.CompanyId != null) {
                    <div class="col-md-12">
                        <h4>Company</h4>
                        <input type="hidden" asp-for="Input.User.CompanyId" />
                        <div class="form-group">
                            <label asp-for="Input.Company.Name"></label>
                            <input asp-for="Input.Company.Name" class="form-control" disabled />
                            <span asp-validation-for="Input.Company.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Company.OrgNumber"></label>
                            <input asp-for="Input.Company.OrgNumber" class="form-control" disabled />
                            <span asp-validation-for="Input.Company.OrgNumber" class="text-danger"></span>
                        </div>
                    </div>
    }
                    <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}